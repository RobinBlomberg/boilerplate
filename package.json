{
  "name": "@robinblomberg/boilerplate",
  "version": "0.2.0",
  "author": "Robin Blomberg",
  "scripts": {
    "ci:pre-commit": "concurrently --kill-others-on-fail -r -p name -n lint -c yellow \"npm run lint\"",
    "ci:post-push": "concurrently --kill-others-on-fail -r -p name -n test -c cyan \"npm run coverage\"",
    "coverage": "c8 npm test",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "mocha {,!(node_modules)/**}/*.test.ts",
    "test:dev": "mocha {,!(node_modules)/**}/*.test.ts --reporter=min --watch --watch-files *.ts"
  },
  "devDependencies": {
    "@robinblomberg/eslint-config-robinblomberg": "^0.4.5",
    "@types/mocha": "^8.2.0",
    "c8": "^7.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
